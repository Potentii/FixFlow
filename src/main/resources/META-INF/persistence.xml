<persistence 
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" 
	version="2.0">
	
	<!-- Persistence unit for MySQL -->
	<persistence-unit name="mysql-pu">
	
		<!-- JPA implementation -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<!-- Entities classes -->
		<class>com.potentii.fixflow.entities.Client</class>
		<class>com.potentii.fixflow.entities.Checkpoint</class>
		<class>com.potentii.fixflow.entities.Operator</class>
		<class>com.potentii.fixflow.entities.Ticket</class>
		<class>com.potentii.fixflow.entities.Feedback</class>
		
		<!-- Settings -->
		<properties>
			<!-- Connection settings -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fixflow?useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			
			<!-- Hibernate settings -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="false"/>
		</properties>
		
	</persistence-unit>
	
</persistence>
